
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-user fa-2x text-primary mb-2"></i>
                <div class="ms-3">
                    <p class="mb-2">Number Of Users</p>
                    <h6 class="mb-0">@ViewData["TotalUsers"]</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-hotel fa-2x text-primary mb-2"></i>
                <div class="ms-3">
                    <p class="mb-2">Number Of Chalets</p>
                    <h6 class="mb-0">@ViewData["TotalChalets"]</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-users fa-2x text-primary mb-2"></i>
                <div class="ms-3">
                    <p class="mb-2">Number Of Adventure Trips</p>
                    <h6 class="mb-0">@ViewData["TotalChalets"]</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->