@model IEnumerable<Rehleti.Models.BookTrip>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
<div class="card-body">
<h4 class="card-title">Adveture Trips Booking</h4>
<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdventureTrip)
            </th>
            <th>
                User First Name
            </th>
            <th>
                User Last Name
            </th>
            <th>
                Check-In
            </th>
            <th>
                Check-Out
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdventureTrip.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdventureTrip.DateFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdventureTrip.DateTo)
            </td>
            <td>
                <a class="btn btn-outline-info"asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
</div>