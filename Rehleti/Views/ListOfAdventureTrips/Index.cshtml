@model IEnumerable<Rehleti.Models.AdventureTrip>

@{
    ViewData["Title"] = "List Of Adventure Trips";
}
<br />
<br />
<!-- Header Start -->
<div class="container-fluid header bg-white p-0">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
            <h1 class="display-5 animated fadeIn mb-4">
                Discover Your Ideal
                <span class="text-primary">Trip Getaway for Unforgettable</span>  Family Adventures in Jordan
            </h1>
            <p class="animated fadeIn mb-4 pb-2">
                Rehleti offers a diverse range of chalets and adventure trips in Jordan, allowing you to create
                unforgettable family moments in the heart of nature. Experience the country's rich heritage and
                natural wonders while supporting domestic tourism and local communities. Book your ideal summer
                getaway today!
            </p>

        </div>
        <div class="col-md-6 animated fadeIn">
            <div class="owl-carousel header-carousel">
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/Website Template/img/carousel-1.jpg" alt="">
                </div>
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/Website Template/img/carousel-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<!-- Header End -->
<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <div class="row g-2">
            <div class="col-md-10">
                <form asp-controller="ListOfAdventureTrips" asp-action="Index">
                    <div class="row g-2 ">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <label style="color:white;">Start Trip</label>
                                <input type="date" name="checkIn" class="form-control datetimepicker-input"
                                       placeholder="Check in" data-target="#date1" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <label style="color:white;">End Trip</label>
                                <input type="date" class="form-control datetimepicker-input" name="chechOut" placeholder="Check out" data-target="#date2" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label></label>
                            <input type="number" class="form-control datetimepicker-input" name="numberOfGuests" placeholder="Number Of Adventerous" />
                        </div>
                        <div class="col-md-2">
                            <label></label>
                            <button class="btn btn-dark border-0 h-50 w-100 py-3" style="text-align: center; display: flex; justify-content: center; align-items: center;">Search</button>
                        </div>
                    </div>
                    
                </form>

            </div>
            
        </div>
    </div>
</div>
<!-- Search End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Adventure Trips</h1>
                    <p>Explore Our Exclusive Selection of Adventure Trips in Jordan.</p>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="property-item rounded overflow-hidden">
                                    <div class="property-item rounded overflow-hidden">
                                        <div class="position-relative overflow-hidden">
                                            @{
                                            var dir = AppDomain.CurrentDomain.BaseDirectory;
                                        }
                                            <a asp-route-id="@item.Id" asp-controller="BookTrips" asp-action="Create"><img class="img-fluid" src="@Url.Content($"{dir}/Images/"+item.ImagePath)" alt=""></a>
                                        </div>
                                        <div class="p-4 pb-0">
                                            <h5 class="text-primary mb-3">JD @item.Price</h5>
                                            <a class="d-block h5 mb-2" asp-route-id="@item.Id" asp-controller="BookTrips" asp-action="Create">@item.Name</a>
                                            <p><i class="fa fa-angle-right me-2" style="color:#05bb8a"></i>@item.Description</p>
                                            <br />
                                            <div class="d-flex border-top">
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user text-primary me-2"></i>@item.NumberOfGuests</small>
                                                <small class="flex-fill text-center py-2"><i class="fas fa-calendar text-primary me-2" style="color:#05bb8a"></i>@item.DateFrom</small>
                                                <small class="flex-fill text-center py-2"><i class="fas fa-calendar text-primary me-2" style="color:#05bb8a"></i>@item.DateTo</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    else
                    {
                        <h3 class=" wow slideInLeft" style="text-align:center">
                            Come Back Soon We Don't Have Any Adventure Trip Right Now
                        </h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Property List End -->
<script src="https://kit.fontawesome.com/your-unique-identifier.js" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>