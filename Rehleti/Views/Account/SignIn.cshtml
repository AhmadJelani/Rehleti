@model Rehleti.Models.UserGuest
@{
	ViewData["Title"] = "SignIn";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rehleti | Sign In</title>
    <link href="~/Images/LOGO.png" rel="icon">
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Register and signin/colorlib-regform-13/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Register and signin/colorlib-regform-13/css/style.css">
</head>
<body>
    <div class="main">

        <div class="container">
            <div class="booking-content">
                <div class="booking-image">
                    <img class="booking-img" src="~/Register and signin/colorlib-regform-13/images/register.jpg" alt="Booking Image">
                    <!-- <img class="booking-img" src="images/login.jpg" alt="Booking Image">   you have to justify the height in register page  -->
                </div>
                <div class="booking-form">
                    <form id="booking-form"asp-action="SignIn">
                        <h2>Sign In</h2>
                        @if (ViewData["ErrorSignIn"]==null)
                        {
                            <p style="font-size: 12px;">Your trip awaits. Sign in to begin your trip.</p>
                        }
                        else
                        {
                            <p style="font-size:12px; color:red">@ViewData["ErrorSignIn"]</p>
                        }
                        <!-- <p>Discover cozy escapes and chalet retreats.</p> -->
                        <div class="form-group form-input">
                            <input type="email" asp-for="Email" required />
                            <label class="form-label">Your Email</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="password"asp-for="Password" required />
                            <label class="form-label">Your Password</label>
                        </div>
                        <div class="form-submit">
                            <input type="submit" value="Sign In" class="submit" id="submit" name="submit" />
                            <a asp-controller="Account" asp-action="Register" class="vertify-booking">Create account</a>
                            <a asp-controller="Account" asp-action="ForgotPassword" class="vertify-booking">Forgot password ?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- JS -->
    <script src="~/Register and signin/colorlib-regform-13/vendor/jquery/jquery.min.js"></script>
    <script src="~/Register and signin/colorlib-regform-13/js/main.js"></script>
</body>
</html>