@model Rehleti.Models.UserGuest
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rehleti | Forgot Password</title>
    <link href="~/Images/LOGO.png" rel="icon">
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Register and signin/colorlib-regform-13/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Register and signin/colorlib-regform-13/css/style.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="booking-content">
                <div class="booking-image">
                    <img class="booking-img" src="~/Register and signin/colorlib-regform-13/images/forgot password.jpg" alt="Booking Image"style="height:98.5%">
                </div>
                <div class="booking-form">
                    <form id="booking-form" asp-action="ForgotPassword" enctype="multipart/form-data">
                        <h2>Forgot Password</h2>
                        <p>Reset your password.</p> 
                        <p style="color:red">@ViewData["PasswordError"]</p>
                        <div class="form-group form-input">
                            <input type="email" asp-for="Email" required />
                            <label class="form-label">Your Email</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="password" asp-for="Password" required />
                            <label class="form-label">Your Password</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="password" asp-for="ConfirmPassword" required />
                            <label class="form-label">Confirm Your Password</label>
                        </div>
                        <div class="form-submit">
                            <input type="submit" value="Reset Password" class="submit" id="submit" name="submit" />
                            <a asp-controller="Account" asp-action="SignIn" class="vertify-booking">Have an account ? Sign In</a>
                            <br/>
                            <a asp-controller="Account" asp-action="Register" class="vertify-booking">Don't have account? create account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- JS -->
    <script src="~/Register and signin/colorlib-regform-13/vendor/jquery/jquery.min.js"></script>
    <script src="~/Register and signin/colorlib-regform-13/js/main.js"></script>
</body>
</html>