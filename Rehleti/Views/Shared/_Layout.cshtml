<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] | Rehleti</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Images/LOGO.png" rel="icon">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://fontawesome.com/icons/calendar-days?f=classic&s=solid">

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Website Template/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Website Template/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Website Template/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Website Template/css/style.css" rel="stylesheet">

    <style>
      
      .rating-box {
        position: relative;
        background: #fff;
        padding: 25px 50px 35px;
        border-radius: 25px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.05);
      }
      .rating-box .stars {
        display: flex;
        align-items: center;
        gap: 25px;
      }
      .stars i {
        color: #e6e6e6;
        font-size: 35px;
        cursor: pointer;
        transition: color 0.2s ease;
      }
      .stars i.active {
        color: #ff9c1a;
      }
    </style>
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
                <a asp-controller="Home"asp-action="Index" class="navbar-brand d-flex align-items-center text-center">
                    <div class="icon p-2 me-2">
                        <img class="img-fluid" src="~/Images/LOGO.png" alt="Icon" style="width: 30px; height: 30px;">
                    </div>
                    <h1 class="m-0 text-primary">Rehleti</h1>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        @if (ViewData["Title"] == "Home Page")
                        {
                            <a href="/Home/Index" class="nav-item nav-link active">Home</a>
                        }
                        else
                        {
                            <a href="/Home/Index" class="nav-item nav-link">Home</a>
                        }
                        @if (ViewData["Title"] == "AboutUs")
                        {
                            <a href="/Home/AboutUs" class="nav-item nav-link active">About Us</a>
                        }
                        else
                        {
                            <a href="/Home/AboutUs" class="nav-item nav-link ">About Us</a>
                        }
                        @if (ViewData["Title"] == "List Of Chalets")
                        {
                            <a asp-controller="ListOfChalets" asp-action="Index" class="nav-item nav-link active">Chalets</a>
                        }
                        else
                        {
                            <a asp-controller="ListOfChalets" asp-action="Index" class="nav-item nav-link ">Chalets</a>
                        }
                        @if (ViewData["Title"] == "List Of Adventure Trips")
                        {
                            <a asp-controller="ListOfAdventureTrips" asp-action="Index" class="nav-item nav-link active">Adventure Trips</a>
                        }
                        else
                        {
                            <a asp-controller="ListOfAdventureTrips" asp-action="Index" class="nav-item nav-link ">Adventure Trips</a>
                        }
                        @if (ViewData["ID"]!=null)
                        {
                            @if (ViewData["Title"] == "MyTrips")
                            {
                                <a asp-controller="MyTrips" asp-action="Index" class="nav-item nav-link active">My Resrvations</a>
                            }
                            else
                            {
                                <a asp-controller="MyTrips" asp-action="Index" class="nav-item nav-link">My Resrvations</a>
                            }
                        }
                        @if (ViewData["Title"] == "ContactUs")
                        {
                            <a href="/ContactUs/Create" class="nav-item nav-link active">Contact Us</a>
                        }
                        else
                        {
                            <a href="/ContactUs/Create" class="nav-item nav-link">Contact Us</a>
                        }
                    </div>
                    @if (ViewData["ID"]==null)
                    {
                        <a href="/Account/Register" style="margin:5px" class="btn btn-primary px-3 d-none d-lg-flex">Register </a>
                        <a href="/Account/SignIn" class="btn btn-primary px-3 d-none d-lg-flex">Sign In</a>
                    }
                    else
                    {
                        <div class="navbar-menu-wrapper navbar-search-wrapper d-none d-lg-flex align-items-center">
                        <ul class="navbar-nav navbar-nav-right">
                            <li class="nav-item nav-profile dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                                    <img src="@Url.Content("~/Images/"+ViewData["ImagePath"])"style="border-radius:50%" height="30px"width="30px" alt="profile" />
                                    <span class="nav-profile-name">@ViewData["Name"]</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                                        <a class="dropdown-item" asp-controller="AccountInfo" asp-action="Info"asp-route-id="@ViewData["ID"]">
                                        <i class="mdi mdi-settings text-primary"></i>
                                        My Account
                                    </a>
                                    <a class="dropdown-item"asp-controller="Account"asp-action="Logout">
                                        <i class="mdi mdi-logout text-primary"></i>
                                        Logout
                                    </a>
                                </div>
                            </li>
                        </ul>
                        </div>
                    }
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<!-- Footer Start -->
<div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Get In Touch</h5>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Amman, Jordan</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+962 061 234 5678</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@RehletiBooking.com</p>
                <div class="d-flex pt-2">
                    <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Quick Links</h5>
                <a class="btn btn-link text-white-50" asp-controller="Home"asp-action="Index">Home</a>
                <a class="btn btn-link text-white-50" asp-controller="Home"asp-action="AboutUs">About Us</a>
                <a class="btn btn-link text-white-50" asp-controller="ListOfChalets"asp-action="Index">Chalets</a>
                <a class="btn btn-link text-white-50" asp-controller="ListOfAdventureTrips"asp-action="Index">Adventure Trips</a>
                @if (ViewData["ID"] != null)
                {
                    <a class="btn btn-link text-white-50" asp-controller="MyTrips"asp-action="Index">My Trips</a>
                }
                <a class="btn btn-link text-white-50" asp-controller="ContactUs"asp-action="Create">Contact Us</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Photo Gallery</h5>
                <div class="row g-2 pt-2">
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-1.jpg" alt="">
                    </div>
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-2.jpg" alt="">
                    </div>
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-3.jpg" alt="">
                    </div>
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-4.jpg" alt="">
                    </div>
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-5.jpg" alt="">
                    </div>
                    <div class="col-4">
                        <img class="img-fluid rounded bg-light p-1" src="~/Website Template/img/property-6.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="">Rehleti</a>, All Right Reserved.
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->
<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/Website Template/lib/wow/wow.min.js"></script>
<script src="~/Website Template/lib/easing/easing.min.js"></script>
<script src="~/Website Template/lib/waypoints/waypoints.min.js"></script>
<script src="~/Website Template/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="~/Website Template/js/main.js"></script>
</body>

</html>